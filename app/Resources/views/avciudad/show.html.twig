{% extends 'base.html.twig' %}
{% block contenido %}
    <div class="row">
        <div class="col s12">
            <h3>{{ avCiudad.nombre }}</h3>
            <table>
                <tbody>
                    <tr>
                        <th>Id Ciudad: </th>
                        <td>{{ avCiudad.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre Ciudad: </th>
                        <td>{{ avCiudad.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Descripcion: </th>
                        <td>{{ avCiudad.descripcion }}</td>
                    </tr>
                    <tr>
                        <th>Departamento: </th>
                        <td>{{ avCiudad.idDepartamento.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Pais: </th>
                        <td>{{ avCiudad.idDepartamento.idPais.nombre }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br><br>
    <div class="row">
        <div class="col s4">
            <a class="waves-effect waves-light btn-large teal darken-4" href="{{ path('avciudad_index') }}"><i class="material-icons left">arrow_back</i>Volver</a>      
        </div>
        <div class="col s4">
            <a class="waves-effect waves-light btn-large teal darken-4" href="{{ path('avciudad_edit', { 'id': avCiudad.id }) }}"><i class="material-icons left">edit</i>Editar</a>                     
        </div>
        <div class="col s4">
            {{ form_start(delete_form) }}
            <button class="btn waves-effect waves-light btn-large teal darken-4" type="submit" name="action">Eliminar
                <i class="material-icons left">delete</i>
            </button>
            {{ form_end(delete_form) }}       
        </div>              
    </div>
{% endblock %}
